#include<stdio.h>
int main()
{
	int a = 13;
	// 0000000000000000000000001
	// (1<<4)
	// 0000000000000000000010000

	// 13
	// 0000000000000000000001101

	a = a | (1 << 4);
	// 0000000000000000000011101
	printf("%d\n",a);
	
	// ~(1<<4)
	// 1111111111111111111101111

	// 13
	// 0000000000000000000001101

	a = a & ~(1 << 4);
	// 0000000000000000000001101
	printf("%d\n",a);
	
    

}
