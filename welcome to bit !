#include<stdio.h>
#include<string.h>
#include<windows.h>
int main()
{
	char arr[] = "welcome to bit !!!!!!";
	char arr2[] = "*********************";
	int left = 0;
	int right = strlen(arr) - 1;
	do
	{
		arr2[left] = arr[left];
		arr2[right] = arr[right];
		printf("%s\n", arr2);
		Sleep(1000);
		system("cls");
		left++;
		right--;

	} while (right >=left);
	printf("%s\n", arr2);
}
