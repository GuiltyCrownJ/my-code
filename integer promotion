#include<stdio.h>

int main()
{
    char a = 3;
//a-00000011
    //000000000000000000000000 00000011

    char b = 127;
//b-01111111
    //000000000000000000000000 01111111
    char c = a + b;
    //000000000000000000000000 00000011
    //000000000000000000000000 01111111
    //000000000000000000000000 10000010
//c-10000010
    printf("%d", c);
    //111111111111111111111111 10000010(complement code)
    //100000000000000000000000 01111101(-126)   
            
    return 0;
}
