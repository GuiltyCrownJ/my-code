#define _CRT_SECURE_NO_WARNINGS
#include<stdio.h>
#include<string.h>

int main()
{
	char a[1000];// a[i] 的范围是0~127、-128、-127~-1、0~127。。。
	int i;
	for (i = 0; i < 1000; i++)
	{
		a[i] = -1 - i;
	        //10000000000000000000000000000001
            //11111111111111111111111111111110
			//11111111111111111111111111111101
		  //-1                        11111101   a[0]=253
		  //-2
		  //-3 
		  //...
		  //-127
		  //-128
		  //127
		  //126
		  //...
		  //0   \0
		  //-1
		  //-2
		  //...
	}
	printf("%d", strlen(a));//找到 \0   128+127=255
	return 0;
}
