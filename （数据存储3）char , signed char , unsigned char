#define _CRT_SECURE_NO_WARNINGS
#include<stdio.h>

int main()
{
	char a = -1;
	//10000000000000000000000000000001
	//11111111111111111111111111111110
	//11111111111111111111111111111111
	//                      a=11111111
//%d  11111111111111111111111111111111（按符号位整型提升）补码          
	signed char b = -1;
	//                      b=11111111
//%d  11111111111111111111111111111111（按符号位整型提升）补码  
	unsigned char c = -1;
	//                      c=11111111
//%d  00000000000000000000000011111111（补0整型提升）补码（原码）
	printf("a=%d,b=%d,c=%d", a, b, c);
	//a=-1 b=-1 c=255      
}
